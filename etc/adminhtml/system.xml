<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="shipay_section" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Shipay</label>
                <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <config_path>payment/shipay/active</config_path>
                </field>
                <field id="environment" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Environment</label>
                    <source_model>Shipay\PixQrGateway\Model\Config\Source\Environment</source_model>
                    <config_path>payment/shipay/environment</config_path>
                </field>
                <field id="title" translate="label comment" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Title</label>
                    <comment>Payment Method title visible on store front.</comment>
                    <config_path>payment/shipay/title</config_path>
                </field>
                <field id="access_key" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Access Key</label>
                    <validate>required-entry</validate>
                    <config_path>payment/shipay/access_key</config_path>
                </field>
                <field id="secret_key" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Secret Key</label>
                    <validate>required-entry</validate>
                    <config_path>payment/shipay/secret_key</config_path>
                </field>
                <field id="client_id" translate="label" type="text" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Client ID</label>
                    <validate>required-entry</validate>
                    <config_path>payment/shipay/client_id</config_path>
                </field>
                <field id="automatically_cancel_orders" translate="label" type="select" sortOrder="65" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Automatically cancel orders</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment><![CDATA[Automatically cancel orders when expired and canceled on Shipay.]]></comment>
                    <config_path>payment/shipay/automatically_cancel_orders</config_path>
                </field>
                <field id="debug" translate="label comment" type="select" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Debug</label>
                    <comment><![CDATA[Request and response calls to Shipay API are stored in the `shipay.log` file.]]></comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <config_path>payment/shipay/debug</config_path>
                </field>
            </group>
        </section>
    </system>
</config>
